<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#82b1ff"
    tools:context="tk.sahabatdeveloper.kisahdanamalankhhasyimasyari.MainActivity">

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_165sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/foto_hasyim"/>

    <Button
        android:id="@+id/btn_profil_singkat"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#3f51b5"
        android:textColor="#fff"
        android:textSize="@dimen/_15sdp"
        android:text="PROFIL SINGKAT" />

    <Button
        android:id="@+id/btn_cerita_perjalanan"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#3f51b5"
        android:textColor="#fff"
        android:textSize="@dimen/_15sdp"
        android:text="Cerita Perjalanan" />

    <Button
        android:id="@+id/btn_kisah_karomah"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center_horizontal"
        android:text="Kisah Karomah"
        android:backgroundTint="#3f51b5"
        android:textColor="#fff"
        android:textSize="@dimen/_15sdp"/>

    <Button
        android:id="@+id/btn_amalan"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center_horizontal"
        android:text="Amalan"
        android:backgroundTint="#3f51b5"
        android:textColor="#fff"
        android:textSize="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

</LinearLayout>
</ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adUnitId="@string/idunitbanner"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true">

    </com.google.android.gms.ads.AdView>

</RelativeLayout>